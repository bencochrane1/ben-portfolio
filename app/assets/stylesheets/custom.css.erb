header {
    background: 
    linear-gradient(
      rgba(0, 0, 0, 0.6), 
      rgba(0, 0, 0, 0.6)
    ),
    url('<%= asset_path("harbour.jpg") %>') no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}


header {
    background-color: white;
}

.portfolio-subtext {
    line-height: 1.5em;
}


.tech-thumbnail {
    height: 3em;
    width: 3em;
}

.tech-thumbnail-stripe {
    height: 2em;
}

.tech-thumbnail-aws {
    height: 4em;
}

.site-link {
    line-height: 1.5em;
}

a, a:focus, a:visited {
    color: #3ea9f5;
    transition: color 0.4s ease;
    font-weight: bold;
}

a:focus, a:hover {
    text-decoration: none !important;
    color: #0e7ac4
}

.right-border {
    border-bottom: 1px solid lightgrey;
    border-right: 1px solid lightgrey;
}

.left-border {
    border-bottom: 1px solid lightgrey;
    border-left: 1px solid lightgrey;
    opacity: 0.9;
}

.space-right {
    margin-right: 1em;
}

img.img-responsive {
    opacity: 0.9;
    transition: opacity 0.4s ease;
}

img.img-responsive:hover {
    opacity: 1.0;
}


.navbar-brand.page-scroll {
    color: white;
    transition: color 0.2s ease;
}

.navbar-brand.page-scroll:hover, .navbar-default .nav li a:hover, .navbar-default .nav li a:focus {
    color: #3ea9f5;
}


a.page-scroll.btn.btn-xl {
    border: 2px solid #3ea9f5;
    color: #3ea9f5;
    transition: background-color 0.3s ease;
    transition: background-color 0.3s ease;
    background: none;
}

a.page-scroll.btn.btn-xl:hover {
    background-color: #3ea9f5;
    border: 2px solid #3ea9f5;
    color: white;
}

.navbar-default.navbar-shrink {
    background-color: #323A45;
}

.contact-social {
    text-align: center;
}

.left {
    float: left;
}


.contact-details {
    text-align: center;
    line-height: 2em;
    font-size: 2em;
}

.list-inline.social-buttons.contact-social li a:hover {
    background-color: #0e7ac4;
}


.navbar.navbar-default.navbar-fixed-top {
    background-color: #323A45;    
}


.section-subheading.text-muted.about-muted {
    line-height: 1.5em;
}

.fa {
    font-size: 2em;
}

ul.social-buttons li a {
    height: 70px;
    width: 70px;
    line-height: 80px;
}

.section-heading.footer {
    margin-bottom: 0.5em;
}

section#contact, ul.social-buttons li a {
    background-color: #323A45;
}



@media (max-width: 768px)  {

    div.intro-heading {
        font-size: 2em !important;
    }

    section#services {
        margin-top: -7em !important;
    }

    .header-gap {
        margin-top: 0.5em !important;
    }

    .navbar-default .navbar-toggle {
        background: none;
        border-radius: 0.2em;
        border-color: #3ea9f5;
        color: #3ea9f5; 
    }

    .navbar-default .navbar-toggle:hover {
        background-color: #3ea9f5;
        border-radius: 0.2em;
    }

    .navbar-default .navbar-toggle:focus {
        background: none;
    }    

    span.icon-bar {
        background-color: #3ea9f5 !important;
    } 

}
