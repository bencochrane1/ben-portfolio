header {
    background-color: white;
}

.portfolio-subtext {
    line-height: 1.5em;
}


.tech-thumbnail {
    height: 3em;
    width: 3em;
}

.tech-thumbnail-stripe {
    height: 2em;
}

.tech-thumbnail-aws {
    height: 4em;
}

.site-link {
    line-height: 1.5em;
}

a, a:focus, a:visited {
    color: #3ea9f5;
    transition: color 0.4s ease;
    font-weight: bold;
}

a:focus, a:hover {
    text-decoration: none !important;
    color: #0e7ac4
}

.right-border {
    border-bottom: 1px solid lightgrey;
    border-right: 1px solid lightgrey;
}

.left-border {
    border-bottom: 1px solid lightgrey;
    border-left: 1px solid lightgrey;
    opacity: 0.9;
}

.space-right {
    margin-right: 1em;
}

img.img-responsive {
    opacity: 0.9;
    transition: opacity 0.4s ease;
}

img.img-responsive:hover {
    opacity: 1.0;
}


.navbar-brand.page-scroll {
    color: white;
    transition: color 0.2s ease;
    font-family: 'Satisfy', cursive;
}

.navbar-brand.page-scroll:hover, .navbar-default .nav li a:hover, .navbar-default .nav li a:focus {
    color: #3ea9f5;
}


a.page-scroll.btn.btn-xl {
    background: none !important;
    border: 2px solid #3ea9f5;
    transition: background-color 0.3s ease;
    transition: color 0.3s ease;
}

a.page-scroll.btn.btn-xl:hover {
    background-color: #3ea9f5;
    border: 2px solid #3ea9f5;
    color: white;
}

.navbar-default.navbar-shrink {
    background-color: #323A45;
}

.contact-social {
    text-align: center;
}

.left {
    float: left;
}


.contact-details {
    text-align: center;
    line-height: 2em;
    font-size: 2em;
}

.list-inline.social-buttons.contact-social li a:hover {
    background-color: #0e7ac4;
}